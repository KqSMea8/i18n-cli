{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./tsbuild",
    "sourceMap": true,
    "jsx": "react",
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
   // "esModuleInterop":true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
    // "ordered-imports": true
  },
  "exclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser",
    "bak",
    "develop",
    "modules/helloDemo",
    "modules/todo"
  ],
  "compileOnSave": false
}